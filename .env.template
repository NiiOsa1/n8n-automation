k##########################################
# 1. INTERNAL SERVICE CONFIGURATION
##########################################

N8N_PROTOCOL=https
N8N_HOST=n8n.yourdomain.com
N8N_PORT=5678

##########################################
# 2. PUBLICLY ACCESSIBLE URLS
##########################################

EDITOR_BASE_URL=https://n8n.yourdomain.com
WEBHOOK_BASE_URL=https://n8n.yourdomain.com
N8N_WEBHOOK_TUNNEL_URL=https://n8n.yourdomain.com

##########################################
# 3. N8N ACCESS CONTROL (REQUIRED)
##########################################

N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your-n8n-username
N8N_BASIC_AUTH_PASSWORD=your-n8n-password

N8N_DISABLE_PRODUCTION_MAIN_WEBHOOK_AUTHENTICATION=true

##########################################
# 4. NOTIFICATIONS (EMAIL SUPPORT)
##########################################

EMAIL=your-email@example.com
EMAIL_PASSWORD=your-email-password

##########################################
# 5. POCKETBASE ADMIN AUTH (Dashboard Access)
##########################################

PB_ADMIN_EMAIL=your-pocketbase-admin@example.com
PB_ADMIN_PASSWORD=your-pocketbase-password

POCKETBASE_URL=http://pb-demo:8090

##########################################
# 6. POCKETBASE BRIDGE USER (Realtime Listener)
##########################################

PB_USER_EMAIL=your-pb-user@example.com
PB_USER_PASSWORD=your-pb-user-password

##########################################
# 7. STABILITY & SECURITY
##########################################

N8N_DIAGNOSTICS_ENABLED=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_ENABLED=true
N8N_AUTH_EXCLUDE_ENDPOINTS=healthz

##########################################
# 8. TIMEZONE
##########################################

TZ=Etc/UTC

##########################################
# 9. PB-WEBHOOK-BRIDGE CONFIG
##########################################

WEBHOOK_URL=https://n8n.yourdomain.com
LEAVE_REQUEST_WEBHOOK_PATH=leave-request-received
ENABLE_WEBHOOK_HEALTHCHECK=false

##########################################
# 10. TIMEOUTS
##########################################

N8N_TASK_RESPONSE_TIMEOUT=90000

##########################################
# 11. ENCRYPTION
##########################################

N8N_ENCRYPTION_KEY=your-encryption-key

